<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.betty.practice.mapper.UserMapper">
    
    <resultMap id="allUser" type="user">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="age" column="age" />
        <result property="sex" column="sex" />
        <association property="role" resultMap="roleMap" />
    </resultMap>

    <resultMap id="roleMap" type="role">
        <id property="id" column="r_id" />
        <result property="roleName" column="r_name" />
    </resultMap>

   <select id="findUser" resultType="map">
       select * from user
   </select>

    <select id="selectAllUser" resultType="com.betty.practice.bean.User">
        select u.id, u.username, u.age, u.sex, r.id r_id, r.role_name r_name
        from user u
        inner join role r on r.id = u.id
    </select>

</mapper>